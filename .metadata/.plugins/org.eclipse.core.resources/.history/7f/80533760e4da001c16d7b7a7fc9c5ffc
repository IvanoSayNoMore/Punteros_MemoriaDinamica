#include <stdio.h>
#include <stdlib.h>
int saludar(char* mensaje);
int saludar(char* mensaje)
{
	printf("%s",mensaje);
	return 0;
}

int main(void) {

	if(!saludar("Holis\n"))
	{
		printf("OK")
	}
	return EXIT_SUCCESS;
}
